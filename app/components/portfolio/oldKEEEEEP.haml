/* ----------------

	PROJECT PAGE STYLES

	----------------*/

	
	.main-info {
		width: 100%;

		p {
			width: auto;
			max-width: 60%;
			display: inline-block;
		}
	}

	.content-section {
		width: 45%;
		display: inline-block;
		vertical-align: top;
		
		.small-details {
			width: 30%;
			display: inline-block;
			position: relative;
			margin-left: 20px;

			&:before {
				content: ' ';
				position: absolute;
				left: 0;
				top: 0;
				width: 100%;
				height: 1px;
				background: black;
			}

			p {
				display: block;
				margin: 10px 0;
			}
		}

		&:nth-of-type(2) {
			width: 49%;
			margin-left: 10px;
			display: flex-start;
			flex-flow: row wrap;
			img {
				width: 48%;
				margin-right: 3px;
				flex: 1 1;
			}
		}
	}


@media screen and (min-width: 375px) {
	.content-section {
		width: 100%;
		margin-bottom: 50px;
	}
};

