/* ---- isotope ---- */

.filter {
	width: auto;
	margin: 0.2rem 0.2rem;
	padding: 0.5rem 2rem;
	display: inline-block;
	border: solid #D33FFF 2px;
	cursor: pointer;
	font-size: 1.7rem;
	font-weight: 700;
	background-size: 1.8rem;
	background-image: url("/assets/dot.svg");
	&:nth-of-type(1) {
		margin-left: 0;
	}

	&:hover {
		color: #fff;
		background: #D33FFF;
		background-size: 1.8rem;
		background-image: url("/assets/dot-purple.svg");
	}

	&.selected {
		color: #fff;
		background: #D33FFF;
		background-size: 1.8rem;
		background-image: url("/assets/dot-purple.svg");
	}
}

